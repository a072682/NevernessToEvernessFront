{/* 大圖輪播 */}
<Swiper
    className="bgSwiper"
    modules={[EffectFade]}
    onSwiper={(swiper) => {
        videoSwipers.current[index] = swiper;
    }}
    loop={true} 
    slidesPerView={1}
    effect="fade"                                   //啟用淡入淡出
    fadeEffect={{ crossFade: true }}                // 可選：交錯漸變更順
    speed={600}                                     // 可選：動畫時間(毫秒)
    spaceBetween={10}
    centeredSlides
>
    {
        item.swiperData?.map((itemIn, i) => {
            return(
                <SwiperSlide key={itemIn.id} className='swiperSlide'>
                    {/* 背景輪播 */}
